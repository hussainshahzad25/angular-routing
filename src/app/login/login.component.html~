
<div class="container-fluid">

    <div class="row">
        
        <form class="form-signin" #userForm="ngForm" (ngSubmit)="login(userForm.value)">
            <h2 class="form-signin-heading">Please sign in</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" #emailRef="ngModel" required class="form-control" name="email" ngModel placeholder="Email">
            <div [hidden]="emailRef.valid || emailRef.pristine" class="alert alert-danger">
                Please Enter Your Email ID
            </div>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" #passwordRef="ngModel" required minlength="5" class="form-control" name="password" ngModel id="inputPassword"
                placeholder="Password">
            <div *ngIf="passwordRef.errors && (passwordRef.dirty || passwordRef.touched)" class="alert alert-danger">
                <div [hidden]="!passwordRef.errors.required">
                    Plase Enter Your Password
                </div>
                <div [hidden]="!passwordRef.errors.minlength">
                    Not a Valid Password
                </div>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        </form>
    </div>
